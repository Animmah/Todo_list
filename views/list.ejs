<%- include("header")-%>

    <body>
        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
        </div>
        <div class="box" >
                <%newListItems.forEach(function (item) {%>
                    <form action="/delete" method="post">
                        <div class="item">
                            <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                            <p><%=item.name%></p>
                        </div>
                        <input type="hidden" name="listName" value="<%=listTitle%>"></input>
                    </form>
                <%})%>
                <form class ="item" method="post" action="/">
                    <!-- action="/" so the values are always sent to app.post("/") route -->
                    <input type="text" name="newitem" placeholder="Add item" autocomplete="off" >
                    <button type="submit" name="list" value=<%= listTitle %>>+</button>
                    <!-- button value is send everytime something is submitted, with this we can make multiple pages using same ejs template -->
                </form>
        </div> 
    </body>

<%- include("footer")-%>